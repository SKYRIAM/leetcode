/**

Definition for singly-linked list.

struct ListNode {

int val;
ListNode *next;
ListNode(int x) : val(x), next(NULL) {}
};
/
class Solution {
public:
ListNode addTwoNumbers(ListNode* l1, ListNode* l2) {
ListNode *q=l1;
ListNode *p=l2;
ListNode *l3=new ListNode(0);
ListNode *head=l3;
head->val=0;
int carry=0;
while(q && p)
{
int value=q->val + p->val + carry;
carry = value>=10?1:0;
value = carry==0 ? value : value-10;
head->next=new ListNode(value);
head=head->next;
p=p->next;
q=q->next;
}

 while(q)
 {
     int value=carry+q->val;
     carry=value>=10?1:0;
     value=carry==0?value:value-10;
     head->next=new ListNode(value);
     head=head->next;
     q=q->next;
 }
 
 while(p)
 { int value=carry+p->val;
     carry=value>=10?1:0;
     value=carry==0?value:value-10;
     head->next=new ListNode(value);
     head=head->next;
     p=p->next;
 }
 
 if(carry)
     head->next=new ListNode(carry);
 return l3->next;
 }
};

